{
    "editorconfig": true,
    "printWidth": 140,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "proseWrap": "always",
    "arrowParens": "avoid",
    "error": {
        "endOfLine":"auto"
    },
    "overrides": [
        {
            "files": "**/*.md",
            "options": {
                "printWidth": 280
            }
        }
    ]
}
